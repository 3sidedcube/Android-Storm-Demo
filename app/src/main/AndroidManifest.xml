<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cube.storm.example"
>
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:name=".MainApplication"
	>
		<activity android:name=".BootActivity">
			<intent-filter>
				<category android:name="android.intent.category.LAUNCHER" />
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		<activity android:name=".MainActivity" />
		<activity android:name=".SettingsActivity" />

		<activity android:name="com.cube.storm.ui.activity.StormActivity" />
		<activity android:name="com.cube.storm.ui.activity.VideoPlayerActivity" />
		<activity android:name="com.cube.storm.ui.activity.WebViewActivity" android:configChanges="keyboardHidden|orientation|screenSize" />
	</application>
</manifest>
